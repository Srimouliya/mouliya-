CREATE TABLE questions (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    question TEXT,
    a TEXT,
    b TEXT,
    c TEXT,
    d TEXT,
    answer TEXT
);
body {
  font-family: Arial, sans-serif;
  transition: background 0.3s, color 0.3s;
}
body.light-mode {
  background: #f5f5f5;
  color: #333;
}
body.dark-mode {
  background: #333;
  color: #f5f5f5;
}
/* Button styles */
.mode-toggle {
  position: fixed;
  top: 10px;
  right: 10px;
  cursor: pointer;
}
// Dark / Light mode toggle
const modeToggle = document.createElement('button');
modeToggle.textContent = 'Toggle Dark/Light Mode';
modeToggle.classList.add('mode-toggle');
document.body.appendChild(modeToggle);

const currentMode = localStorage.getItem('mode') || 'light';
document.body.classList.add(${currentMode}-mode);

modeToggle.onclick = () => {
  const newMode = document.body.classList.contains('light-mode') ? 'dark' : 'light';
  document.body.classList.toggle('light-mode');
  document.body.classList.toggle('dark-mode');
  localStorage.setItem('mode', newMode);
};


function startTimer(duration, display, onExpire) {
  let timer = duration, minutes, seconds;
  const interval = setInterval(() => {
    minutes = Math.floor(timer / 60);
    seconds = timer % 60;
    display.textContent = ${minutes}:${seconds < 10 ? '0' : ''}${seconds};
    if (--timer < 0) {
      clearInterval(interval);
      onExpire();
    }
  }, 1000);
}

document.addEventListener('DOMContentLoaded', () => {
  const timerDisplay = document.getElementById('timer');
  if (timerDisplay) {
    startTimer(60 * 5, timerDisplay, () => document.getElementById('quiz-form').submit());
  }
});
